<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_remember_gridview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/image1"/>


    <TextView
        android:id="@+id/et_title_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_remember_gridview"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:hint="题记"
        android:maxLines="1"
        android:maxWidth="100dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/et_remark_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_title_remember"
        android:layout_centerHorizontal="true"
        android:hint="创建时间"
        android:textColor="@color/grey"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:src="@mipmap/ic_del"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>