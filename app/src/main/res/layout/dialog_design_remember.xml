<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/rectangle_shape_grey"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:text="新建记忆库"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_dialog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="5dp"
        android:text="请为此值得纪念的时刻输入名称"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/et_dialog3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_shape_grey"
        android:hint="标题"
        android:maxHeight="20dp"
        android:maxLength="30"
        android:maxLines="1"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_gravity="center"
        android:background="@color/toolbar_separator"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog4_cancle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/purple"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_dialog5_save"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="录入"
            android:textColor="@color/grey"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>