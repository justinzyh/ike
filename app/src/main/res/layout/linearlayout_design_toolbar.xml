<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/purple"
    android:orientation="horizontal"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:layout_scrollFlags="scroll|enterAlways">

    <RelativeLayout
        android:id="@+id/title_workspace_layout"
        android:layout_width="match_parent"
        android:layout_height="40.0dip">

        <LinearLayout
            android:id="@+id/title_city_manager_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back_toolbar"
                android:layout_gravity="center_vertical"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:src="@mipmap/ic_chevron_left"/>

            <ImageView
                android:layout_width="1.0dip"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:background="@color/toolbar_separator"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/title_toolbar_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/titleRight"
            android:layout_toRightOf="@id/title_city_manager_layout"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="标题名称"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/titleRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/fab_icon_margin"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/title_toolbar_add"
                android:layout_width="30.0dip"
                android:padding="3dp"
                android:layout_height="30.0dip"
                android:src="@mipmap/ic_plus_to_photos_white"/>
            <ImageView
                android:id="@+id/title_toolbar_edit"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:src="@mipmap/ic_edit_36dp"
                android:padding="3dp"/>

            <ImageView
                android:id="@+id/title_toolbar_more"
                android:layout_width="30.0dip"
                android:padding="3dp"
                android:layout_height="30.0dip"
                android:src="@mipmap/ic_toolbar_more"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>